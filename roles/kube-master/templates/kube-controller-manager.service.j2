[Unit]
Description=Kubernetes Controller Manager
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
EnvironmentFile={{ k8s_cfg_dir }}/kube-controller-manager.conf
ExecStart={{ k8s_bin_dir }}/kube-controller-manager $KUBE_CONTROLLER_MANAGER_OPTS
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
