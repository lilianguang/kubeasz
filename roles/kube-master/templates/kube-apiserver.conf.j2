KUBE_APISERVER_OPTS="--logtostderr=false \
  --log-dir={{ logs_kube_apiserver }} \
  --allow-privileged=true \
  --anonymous-auth=false \
  --api-audiences=api,istio-ca \
  --authorization-mode=Node,RBAC \
  --bind-address={{ inventory_hostname }} \
  --client-ca-file={{ k8s_ca_dir }}/ca.pem \
  --endpoint-reconciler-type=lease \
  --etcd-cafile={{ k8s_ca_dir }}/ca.pem \
  --etcd-certfile={{ k8s_ca_dir }}/kubernetes.pem \
  --etcd-keyfile={{ k8s_ca_dir }}/kubernetes-key.pem \
  --etcd-servers={{ ETCD_ENDPOINTS }} \
  --kubelet-certificate-authority={{ k8s_ca_dir }}/ca.pem \
  --kubelet-client-certificate={{ k8s_ca_dir }}/kubernetes.pem \
  --kubelet-client-key={{ k8s_ca_dir }}/kubernetes-key.pem \
  --secure-port={{ SECURE_PORT }} \
  --service-account-issuer=https://kubernetes.default.svc \
  --service-account-signing-key-file={{ k8s_ca_dir }}/ca-key.pem \
  --service-account-key-file={{ k8s_ca_dir }}/ca.pem \
  --service-cluster-ip-range={{ SERVICE_CIDR }} \
  --service-node-port-range={{ NODE_PORT_RANGE }} \
  --tls-cert-file={{ k8s_ca_dir }}/kubernetes.pem \
  --tls-private-key-file={{ k8s_ca_dir }}/kubernetes-key.pem \
  --requestheader-client-ca-file={{ k8s_ca_dir }}/ca.pem \
  --requestheader-allowed-names= \
  --requestheader-extra-headers-prefix=X-Remote-Extra- \
  --requestheader-group-headers=X-Remote-Group \
  --requestheader-username-headers=X-Remote-User \
  --proxy-client-cert-file={{ k8s_ca_dir }}/aggregator-proxy.pem \
  --proxy-client-key-file={{ k8s_ca_dir }}/aggregator-proxy-key.pem \
  --enable-aggregator-routing=true \
  --v=2"
